# Programs and utilities
alias xclip="xclip -selection c"
alias s='subl'
alias v='vim'
alias t='tree'
alias n='nano'
alias hgrep='history | grep'
alias fd='fdfind'
alias findfile='find . -name'
alias replacestring='find . -type f -exec sed -i 's/$1/$2/g' {} +'
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."
alias sds='source devel/setup.bash'
alias opendir='xdg-open .'

# Quick edit of files
alias edvimrc='vim ~/.vimrc'
alias edreadme='vim ~/.vim/README.md'
alias edtodo='vim ~/.vim/todo.txt'
alias edbash='vim ~/.bashrc'
alias edaliases='vim ~/.bash_aliases'
